{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom", "es2019"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@my-tray/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@my-tray/shared/client/auth": ["libs/shared/client/auth/src/index.ts"],
      "@my-tray/env/client/*": ["apps/client/src/environments/*"],
      "@my-tray/env/backend": ["apps/api/src/environments/*"],
      "@my-tray/shared/layout": ["libs/shared/client/layout/src/index.ts"],
      "@my-tray/data-layers/mytray/repositories": [
        "libs/data-layers/mytray/repositories/src/index.ts"
      ],
      "@my-tray/shared/utilities": ["libs/shared/utilities/src/index.ts"],
      "@my-tray/data-services/mytray/services": [
        "libs/data-services/mytray/services/src/index.ts"
      ],
      "@my-tray/data-services/peer2park/services": [
        "libs/data-services/peer2park/services/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
